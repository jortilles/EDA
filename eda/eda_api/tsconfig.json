{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./lib",
      "resolveJsonModule":  true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": ["lib/types", "node_modules/@types"],
      "skipLibCheck": true
  },
  "include": [
      "lib/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
