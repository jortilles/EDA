{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "paths": {
        "@eda/components/*": ["app/module/components/*"],
        "@eda/services/*": ["app/services/*"],
        "@eda/models/*": ["app/shared/models/*"],
        "@eda/pipes/*": ["app/shared/pipes/*"],
        "@eda/shared/*": ["app/shared/*"],
        "@eda/configs/*": ["app/config/*"]
      },
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "importHelpers": true,
      "module": "esnext", // ðŸ”„ Cambiado a "esnext" para soporte completo en Angular 17
      "target": "es2022", // âœ… Es vÃ¡lido, pero "esnext" podrÃ­a ser una opciÃ³n si planeas usar lo mÃ¡s reciente
      "typeRoots": ["node_modules/@types"],
      "types": ["node"],
      "lib": ["es2022", "dom"],
      "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
      "strictTemplates": true,
      "strictInjectionParameters": true,
      "strictDomEventTypes": false, // Disable DOM Types
      "enableI18nLegacyMessageIdFormat": false, // âœ… Angular moderno no necesita IDs legados para i18n
      "i18nInLocale": "es-ES", // âœ… Cambia esto si quieres otro idioma predeterminado
      "i18nOutFile": "src/locale/messages.xlf", // âœ… Si deseas extraer mensajes, especifica el archivo de salida
      "i18nOutFormat": "xlf", // âœ… Especifica el formato de exportaciÃ³n de i18n (por defecto es "xlf")
      "enableIvy": true // âœ… Ivy debe estar habilitado (por defecto en Angular 17)
    }
}
  